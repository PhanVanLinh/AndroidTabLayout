<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="toong.com.androidtablayout.MainActivity"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Normal tab"
        />

    <android.support.design.widget.TabLayout
        android:id="@+id/tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chang tab background"
        />

    <android.support.design.widget.TabLayout
        android:id="@+id/tab2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#800000ff"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chang tab background"
        />

    <android.support.design.widget.TabLayout
        android:id="@+id/tab3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#800000ff"
        app:tabSelectedTextColor="#f00"
        app:tabTextAppearance="@style/CustomTabTextStyle"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tab custom font"
        />

    <toong.com.androidtablayout.CustomTab
        android:id="@+id/tab4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#80ffff00"
        app:tabSelectedTextColor="#f00"
        app:tabTextAppearance="@style/CustomTabTextStyle"
        />

</LinearLayout>
